{
  "name": "eduplatfrom.api",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon index.ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "swagger": "node swagger.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateugazi/EduPlatform.API.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mateugazi/EduPlatform.API/issues"
  },
  "homepage": "https://github.com/mateugazi/EduPlatform.API#readme",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "swagger-autogen": "^2.7.1",
    "swagger-ui": "^3.45.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "mongoose": "^5.11.17",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "./src/**"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  }
}
